{%- style -%}
  .tow-col-section-{{ section.id }}{
    width: {{ section.settings.full-text-section-width }}px
  }
  .wax-grid-container-2-col-{{ section.id }}{
    column-gap: {{ section.settings.column-gap }}px
  }


  {% for block in section.blocks %}
    #wrapper-left {
      width: {{ block.settings.left_image_width }}px
    }
    #wrapper-right {
      width: {{ block.settings.right_image_width }}px
    }

  {% endfor %}
{%- endstyle -%}

<div class="tow-col-section-{{ section.id }} tow-col-section">
  <div class="wax-grid-container-2-col-{{ section.id }} wax-grid-container-2-col">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when "left_img" %}
          <img id="wrapper-left" src=" {{ block.settings.left_image | img_url: 'grande' }} " alt="" height="" loading="lazy">

        {% when "right_img" %}
          <img id="wrapper-right" src=" {{ block.settings.right_image | img_url: 'grande' }} " alt="" height="" loading="lazy">



      {% endcase %}

    {% endfor %}

  </div>

</div>

{% schema %}
  {
    "name": "Grid Two Column Text",
    "settings": [
      {
        "type": "range",
        "id": "full-text-section-width",
        "min": 300,
        "max": 1400,
        "step": 50,
        "unit": "px",
        "label": "Section Width",
        "default": 600

      }, {
        "type": "range",
        "id": "column-gap",
        "min": 0,
        "max": 200,
        "step": 5,
        "unit": "px",
        "label": "Column Gap",
        "default": 50

      }
    ],
    "max_blocks": 2,
    "blocks": [
      {
        "type": "left_img",
        "name": "Left image section",
        "settings": [
          {
            "type": "image_picker",
            "id": "left_image",
            "label": "Choose left image"
          }, {
            "type": "range",
            "id": "left_image_width",
            "min": 50,
            "max": 800,
            "step": 25,
            "unit": "px",
            "label": "Image Width",
            "default": 475

          }
        ]
      }, {
        "type": "right_img",
        "name": "Right image section",
        "settings": [

          {
            "type": "image_picker",
            "id": "right_image",
            "label": "Choose Right image"
          }, {
            "type": "range",
            "id": "right_image_width",
            "min": 50,
            "max": 800,
            "step": 25,
            "unit": "px",
            "label": "Image Width",
            "default": 475
          }

          ]
        }
      ],
      "presets" : [
        {
          "category": "content",
          "name": "Grid Two Column image",

          "blocks": [
            {
              "type": "left_img"
            }, {
              "type": "right_img"
            }
          ]
        }

      ]

    }
{% endschema %}