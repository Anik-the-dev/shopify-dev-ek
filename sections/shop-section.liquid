<link rel="stylesheet" href="{{ 'shop-section.css' | asset_url }}" media="print" onload="this.media='all'">

{%- style -%}
  .section-container {
    width: {{ section.settings.section-width }}px;
    height: {{ section.settings.section-height }}px;
    background-image: url('{{ section.settings.section-image | img_url: 'master' }}')
  }
  .inner-section {
    opacity: {{ section.settings.inner-section-opacity }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;

    .text-margin {
      margin-top: 80px;
      margin-bottom: 80px;
      background-color: aqua;
    }
    
{%- endstyle -%}
<style>

  .line-height-0p{
    line-height: 0;

  }
  {% for block in section.blocks %}
    .text-margin {
      margin-top: {{ block.settings.text_padding_top }}px;
      margin-bottom: {{ block.settings.text_padding_bottom }}px;
    }

  {% endfor %}
  
</style>

<div class="section-container">
  <div class="inner-section  {{ section.settings.inner-section-content-alignment }}">
    {% for block in section.blocks %}
      {% if block.type == 'heading' %}
        <h2 class="line-height-0p text-margin {{ block.settings.heading_size }}">{{ block.settings.inner-section-heading }}</h2>


      {% endif %}
      {% if block.type == 'button' %}
        <a class='inner-btn' href="{{ block.settings.button_link }}">
          <p>{{ block.settings.button_label }}
          </p>
        </a>



      {% endif %}

    {% endfor %}
  </div>
</div>

{% schema %}
  {
    "name": "Shop Section",
    "settings": [
      {
        "type": "image_picker",
        "id": "section-image",
        "label": "Set Background Image"
      },
      {
        "type": "range",
        "id": "section-width",
        "min": 300,
        "max": 1200,
        "step": 50,
        "unit": "px",
        "label": "Section Width",
        "default": 900

      },
      {
        "type": "range",
        "id": "section-height",
        "min": 300,
        "max": 800,
        "step": 50,
        "unit": "px",
        "label": "Section Height",
        "default": 500

      },
      {
        "type": "range",
        "id": "inner-section-opacity",
        "min": 0.1,
        "max": 1.0,
        "step": 0.1,
        "unit": "%",
        "label": "Inner Section Opacity",
        "default": 0.8

      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Inner Section Padding Top",
        "default": 20
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Inner Section Padding Bottom",
        "default": 20
      }, {
        "type": "select",
        "id": "inner-section-content-alignment",
        "options": [
          {
            "value": "left",
            "label": "Left"
          }, {
            "value": "center",
            "label": "Center"
          }, {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "center",
        "label": "Content Alignment"
      }
    ],

    "blocks": [
      {
        "type": "heading",
        "name": "Headline",
        "settings": [
          {
            "type": "richtext",
            "id": "inner-section-heading",
            "default": "<p>Add your Headline</p>",
            "label": "Headline"

          }, {
            "type": "range",
            "id": "text_padding_top",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "Inner Section Padding Top",
            "default": 20
          }, {
            "type": "range",
            "id": "text_padding_bottom",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "Inner Section Padding Bottom",
            "default": 20
          }, {
            "type": "select",
            "id": "heading_size",
            "options": [
              {
                "value": "h2",
                "label": "Small"

              }, {
                "value": "h1",
                "label": "Medium"

              }, {
                "value": "h0",
                "label": "Large"

              }, {
                "value": "hxl",
                "label": "Xtra Large"

              }
            ],
            "default": "h1",
            "label": "Font Size"
          }

        ]
      }, {
        "type": "button",
        "name": "Button",
        "settings": [
          {
            "type": "text",
            "id": "button_label",
            "default": "Add Something",
            "label": "Button Text"
          }, {
            "type": "url",
            "id": "button_link",
            "label": "Button Url"
          }
        ]
      }

    ],
    "presets": [
      {
        "category": "content",
        "name": "Shop Section"
      }
    ]
  }
{% endschema %}