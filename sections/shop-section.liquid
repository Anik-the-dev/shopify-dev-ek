<link rel="stylesheet" href="{{ 'shop-section.css' | asset_url }}" media="print" onload="this.media='all'">

{%- style -%}
  .section-container {
    width: {{ section.settings.section-width }}px;
    height: {{ section.settings.section-height }}px;
    background-image: url('{{ section.settings.section-image | img_url: 'master' }}')
  }
  .inner-section {
    opacity: {{ section.settings.inner-section-opacity }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
{%- endstyle -%}

<div class="section-container">
  <div class="inner-section  {{ section.settings.inner-section-content-alignment }}">
    <h1>I am Anik</h1>
    <p>I am Anik Anik Anik</p>
  </div>
</div>

{% schema %}
  {
    "name": "Shop Section",
    "settings": [
      {
        "type": "image_picker",
        "id": "section-image",
        "label": "Set Background Image"
      },
      {
        "type": "range",
        "id": "section-width",
        "min": 300,
        "max": 1200,
        "step": 50,
        "unit": "px",
        "label": "Section Width",
        "default": 900

      },
      {
        "type": "range",
        "id": "section-height",
        "min": 300,
        "max": 800,
        "step": 50,
        "unit": "px",
        "label": "Section Height",
        "default": 500

      },
      {
        "type": "range",
        "id": "inner-section-opacity",
        "min": 0.1,
        "max": 1.0,
        "step": 0.1,
        "unit": "%",
        "label": "Inner Section Opacity",
        "default": 0.8

      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Inner Section Padding Top",
        "default": 20
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Inner Section Padding Bottom",
        "default": 20
      }, {
        "type": "select",
        "id": "inner-section-content-alignment",
        "options": [
          {
            "value": "left",
            "label": "Left"
          }, {
            "value": "center",
            "label": "Center"
          }, {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "center",
        "label": "Content Alignment"
      }
    ],
    "blocks": [
        {
            "type": "heading",
            "name": "Add Headline",
            "settings":[
                "type":
            ]
        }
    ],
    "presets": [
      {
        "category": "content",
        "name": "Shop Section"
      }
    ]
  }
{% endschema %}
